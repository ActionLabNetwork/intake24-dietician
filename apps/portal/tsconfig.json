{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["esnext", "dom"],
    "types": ["node", "vuetify"],
    "module": "esnext",
    "paths": {
      "@intake24-dietician/portal/*": ["src/*"],
      "@intake24-dietician/common/*": ["../../packages/common/src/*"],
      "@intake24-dietician/i18n/*": ["../../packages/i18n/src/*"],
      "@intake24-dietician/*": ["../../packages/*/src"],
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "vite.config.ts"
  ],
  "exclude": ["node_modules"]
}
