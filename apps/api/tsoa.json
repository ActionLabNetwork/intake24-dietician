{
  "entryFile": "src/app.ts",
  "noImplicitAdditionalProperties": "throw-on-extras",
  "controllerPathGlobs": ["src/**/*.controller.ts"],
  "spec": {
    "outputDirectory": "build",
    "specVersion": 3,
    "securityDefinitions": {
      "jwt": {
        "type": "jwt",
        "name": "JSON Web Token"
      }
    }
  },
  "routes": {
    "routesDir": "build",
    "authenticationModule": "src/middleware/auth.ts"
  },
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@intake24-dietician/auth/*": ["src/*"],
      "@intake24-dietician/auth-tests/*": ["__tests__/*"],
      "@intake24-dietician/common/*": ["../../packages/common/src/*"],
      "@intake24-dietician/db/*": ["../../packages/db/src/*"],
      "@intake24-dietician/i18n/*": ["../../packages/i18n/src/*"],
      "@intake24/*": ["../../packages/*/src"],
      "tsoa": ["node_modules/tsoa/dist"]
    },
    "types": ["node", "jest", "jest-extended"]
  }
}
