{
  "name": "intake24-dietician",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "packageManager": "pnpm@8.9.2",
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "prepare": "pnpm simple-git-hooks",
    "clean": "rimraf --glob **/coverage **/dist **/node_modules",
    "build": "pnpm --filter ./apps build",
    "lint:md": "prettier --write **/*.md",
    "lint:ts": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "lint": "run-s lint:md lint:ts",
    "test:unit": "jest",
    "test:unit:watch": "pnpm test:unit --watch",
    "test:unit:coverage": "pnpm test:unit --coverage",
    "test:integration": "pnpm --filter ./apps/{api,portal} test:integration",
    "test:integration:coverage": "pnpm --filter * test:integration:coverage"
  },
  "prigit reset --hardvate": true,
  "engines": {
    "node": ">=18"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm tsx scripts/verify-commit.ts $1"
  },
  "lint-staged": {
    "*.md": "prettier --write",
    "*.{ts,vue}": "eslint --fix"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@jest/types": "^29.6.3",
    "@types/jest": "^29.5.6",
    "@types/node": "^18.18.6",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "eslint": "^8.51.0",
    "eslint-config-alloy": "^5.1.2",
    "jest": "^29.7.0",
    "jest-extended": "^4.0.2",
    "lint-staged": "^14.0.1",
    "npm-run-all": "^4.1.5",
    "picocolors": "^1.0.0",
    "prettier": "^3.0.3",
    "rimraf": "^5.0.5",
    "simple-git-hooks": "^2.9.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsx": "^3.14.0",
    "typescript": "^5.2.2",
    "vite": "^4.5.0",
    "vitepress": "1.0.0-rc.4"
  }
}
