{
  "name": "intake24-dietician",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "preinstall": "npx -y only-allow pnpm",
    "prepare": "pnpm simple-git-hooks",
    "clean": "rimraf --glob **/coverage **/dist **/node_modules",
    "build": "pnpm --filter ./apps build",
    "lint:md": "prettier --write **/*.md",
    "lint:ts": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix",
    "lint": "run-s lint:md lint:ts",
    "test:unit": "jest",
    "test:unit:watch": "pnpm test:unit --watch",
    "test:unit:coverage": "pnpm test:unit --coverage",
    "test:integration": "pnpm --filter ./apps/{api,portal} test:integration",
    "test:integration:coverage": "pnpm --filter * test:integration:coverage"
  },
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=16"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "pnpm tsx scripts/verify-commit.ts $1"
  },
  "lint-staged": {
    "*.md": "prettier --write",
    "*.{ts,vue}": "eslint --fix"
  },
  "devDependencies": {
    "@jest/types": "^29.6.1",
    "@types/jest": "^29.5.3",
    "@types/node": "^18.17.6",
    "@typescript-eslint/eslint-plugin": "^6.4.0",
    "@typescript-eslint/parser": "^6.4.0",
    "@vue/eslint-config-prettier": "^8.0.0",
    "@vue/eslint-config-typescript": "^11.0.3",
    "eslint": "^8.47.0",
    "eslint-config-alloy": "^5.1.1",
    "jest": "^29.6.2",
    "jest-extended": "^4.0.1",
    "lint-staged": "^14.0.0",
    "npm-run-all": "^4.1.5",
    "picocolors": "^1.0.0",
    "prettier": "^3.0.2",
    "rimraf": "^5.0.1",
    "simple-git-hooks": "^2.9.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.7",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vitepress": "1.0.0-rc.4"
  }
}
